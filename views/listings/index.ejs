            #filters {
                display: flex;
                overflow-x: auto;
                white-space: nowrap;
                padding: 1rem;
                gap: 1.5rem;
                scrollbar-width: none;
                /* Firefox */
            }

            #filters::-webkit-scrollbar {
                display: none;
                /* Chrome, Safari */
            }

            .filter {
                display: inline-block;
                text-align: center;
                opacity: 0.7;
                min-width: 70px;
                flex-shrink: 0;
            }

            .filter:hover {
                opacity: 1;
                cursor: pointer;
            }

            .filter p {
                font-size: 0.75rem;
                margin-top: 0.3rem;
            }

            /* Compact toggle */
            .tax-toggle {
                display: inline-flex;
                align-items: center;
                border: 1px solid black;
                border-radius: 1rem;
                padding: 0.25rem 0.5rem;
                font-size: 0.75rem;
                white-space: nowrap;
                flex-shrink: 0;
            }

            .tax-toggle .form-check-label {
                font-size: 0.75rem;
                margin-left: 0.4rem;
            }

            .tax-info {
                display: none;
            }


            /* Optional scroll hint */
            .scroll-hint {
                font-size: 1rem;
                opacity: 0.4;
                margin-left: auto;
                display: none;
            }

            @media (max-width: 768px) {
                .scroll-hint {
                    display: inline-block;
                }
            }

            .title-price-line {
                display: flex;
                justify-content: space-between;
                align-items: center;
                flex-wrap: nowrap;
                gap: 0.5rem;
            }

            .price-line {
                white-space: nowrap;
                /* Prevent line-breaks in price block */
                font-weight: 500;
            }
        </style>

