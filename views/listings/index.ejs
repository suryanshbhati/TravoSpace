        <script>
            const taxSwitch = document.getElementById("switchCheckDefault");

            taxSwitch.addEventListener("change", () => {
                const priceElems = document.getElementsByClassName("base-price");
                const gstTexts = document.getElementsByClassName("gst-text");

                for (let i = 0; i < priceElems.length; i++) {
                    let priceEl = priceElems[i];
                    let gstEl = gstTexts[i];
                    let base = Number(priceEl.getAttribute("data-price"));

                    if (taxSwitch.checked) {
                        let total = Math.round(base * 1.18);
                        priceEl.innerText = total.toLocaleString("en-IN");
                        gstEl.classList.remove("d-none");
                    } else {
                        priceEl.innerText = base.toLocaleString("en-IN");
                        gstEl.classList.add("d-none");
                    }
                }
            });
        </script>



